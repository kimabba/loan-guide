{
  "name": "loan-guide-chatbot",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run pages:dev",
    "dev:web": "bun run --filter web dev",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "deploy": "bun run deploy:pages",
    "deploy:pages": "bun run build:web && bun run --filter web pages:deploy",
    "pages:dev": "bun run build:web && bun run --filter web pages:dev",
    "lint": "bun run --filter '*' lint",
    "clean": "rm -rf apps/*/dist apps/*/.wrangler packages/*/dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/genai": "^1.35.0"
  }
}
